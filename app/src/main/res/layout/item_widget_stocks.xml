<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_widget_stock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/content_padding_xsmall"
    android:paddingTop="@dimen/content_padding_xsmall"
    android:paddingStart="@dimen/content_padding_large"
    android:paddingEnd="@dimen/content_padding_large">

    <TextView
        android:id="@+id/tv_widget_item_symbol"
        style="@style/TextAppearance.AppCompat.Title.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:textColor="@color/widget_list_text"
        tools:text="GOOG" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_widget_item_price"
            style="@style/TextAppearance.AppCompat.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="@dimen/content_margin_small"
            android:textColor="@color/widget_list_text"
            tools:text="1000.00" />

        <TextView
            android:id="@+id/tv_widget_item_change"
            style="@style/TextAppearance.AppCompat.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:gravity="end"
            android:textColor="@color/widget_list_text"
            tools:text="100%" />
    </LinearLayout>
</LinearLayout>
